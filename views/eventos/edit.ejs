<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Editar <%= evento.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/eventos/<%= evento._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="evento[name]" value="<%= evento.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Imagem</label>
					<input type="file" id="image" name="image" accept="image/*">
                </div>
				<div class="form-group">
                    <input class="form-control" type="date" name="evento[date]" value="<%= evento.date %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="evento[description]" value="<%= evento.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submeter!</button>
                </div>
            </form>
			<div class="text-right">
				<a href="/eventos">Voltar para Eventos</a>
			</div>
            
        </div>
    </div>
</div>

<%- include("../partials/footer") %>

