<%- include("../partials/header") %>

<div class= "container">
        <header class="jumbotron"> 
                <div class="container">
                    <h1>Bem Vindos à Rinchoa</h1>
                    <p>Veja os locais desta linda terra</p>

                       <p>
                          <a class="btn btn-primary btn-lg addButton" href="/locais/new">Adicionar novo Local</a>
                        </p>
                </div>
        </header>
                
        <div class ="row text-center" style="display:flex; flex-wrap: wrap;">
                <% locais.forEach(function(local){ %>
                        <div class="col-md-3 col-sm-6">  
                           <div class="thumbnail">
                             <img src="<%= local.image %>">
                             <div class="caption">
                                     <h4><%= local.name%></h4>
                             </div>
                             <p>
                                     <a href="/locais/<%= local._id %>" class="btn btn-primary">Mais informação</a>
                             </p>
                           </div>      
                        </div>
                <% }) %>
        </div>
</div>

<%- include("../partials/footer") %>