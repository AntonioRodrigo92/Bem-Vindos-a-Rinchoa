<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add new Comment to <%= personalidade.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/personalidades/<%= personalidade._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="texto">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
            </form>
            <div class="text-right">
				<a href="/personalidades">Voltar para Personalidades</a>
			</div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
