<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Editar <%= personalidade.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/personalidades/<%= personalidade._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="personalidade[name]" value="<%= personalidade.name %>">
                </div>
				<div class="form-group">
                    <label for="image">Imagem</label>
					<input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="personalidade[description]" value="<%= personalidade.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submeter!</button>
                </div>
            </form>
			<div class="text-right">
				<a href="/personalidades">Voltar para Personalidades</a>
			</div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>

