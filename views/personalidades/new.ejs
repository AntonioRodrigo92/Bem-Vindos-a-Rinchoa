<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Adicionar uma nova Personalidade</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/personalidades" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="personalidade[name]" placeholder="nome">
                </div>
                <div class="form-group">
                    <label for="image">Imagem</label>
					<input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="personalidade[description]" placeholder="Descrição">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Criar!</button>
                </div>
            </form>
			<div class="text-right">
				<a href="/personalidades">Voltar para Personalidades</a>
			</div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>

